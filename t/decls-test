in "../builtins.maude"
in "../p-syntax.maude"

mod DECLS-TEST is
  including P-SYNTAX .

endm

parse var x ; .
parse var x ; var y ; .
parse var x : Int ; .
parse var x : Int ; var y : Int ; .

parse
  state foo {
    var x ; var y : Int ;
  } .

parse
  on eFoo do {
    var x ;
  } .

parse
  on eFoo do {
    var x ;
    goto foo ;
  } .

parse 1 + a .

parse 1 + a + 1 .

parse x = a + 1 ; .

parse if (a <= 1)  x = 1 ; else x = 2 ; .

parse if (a <= 1) { x = 1 ; y = 2 ; } else  x = 2 ;  .

quit .
